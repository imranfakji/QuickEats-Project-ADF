{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "SILVER_LAYER_ADLS",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "aggregate1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          name as string,",
				"          description as string,",
				"          price as short,",
				"          image as string,",
				"          category as string,",
				"          {__v} as boolean,",
				"          userId as string,",
				"          amount as short,",
				"          status as string,",
				"          payment as boolean,",
				"          email as string,",
				"          password as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 aggregate() ~> aggregate1"
			]
		}
	}
}