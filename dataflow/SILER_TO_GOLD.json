{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "SILVER_LAYER_ADLS",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "aggregate1"
				},
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          {$oid} as string,",
				"          userId as string,",
				"          {_id} as string,",
				"          name as string,",
				"          description as string,",
				"          price as short,",
				"          image as string,",
				"          category as string,",
				"          quantity as short,",
				"          amount as short,",
				"          firstName as string,",
				"          lastName as string,",
				"          email as string,",
				"          street as string,",
				"          city as string,",
				"          state as string,",
				"          zipcode as integer,",
				"          country as string,",
				"          phone as long,",
				"          status as string,",
				"          {$date} as timestamp,",
				"          payment as boolean,",
				"          password as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 aggregate(groupBy({$date}),",
				"     Total_Revenue_PerDay = sum(amount)) ~> aggregate1",
				"aggregate1 derive() ~> derivedColumn1"
			]
		}
	}
}